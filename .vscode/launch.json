{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run (Integrated Terminal)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/main",
        "args": [],                           // any runtime args go here
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",     // ‚Üê tell VS Code to use the terminal
        "externalConsole": false,
        "preLaunchTask": "build",
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  